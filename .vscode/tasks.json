{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: build before debug",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out",
                "-std=c++17",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-D_GLIBCXX_DEBUG",
                "-D_GLIBCXX_DEBUG_PEDANTIC",
                "-Wall",
                "-Wextra",
                "-pedantic"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}