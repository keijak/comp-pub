{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/local/bin/g++-11",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-Wall",
                "-Wextra",
                "-Wfatal-errors"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g",
                "-x",
                "c++",
                "${file}",
                "-fsanitize=address",
                "-fsanitize=undefined",
                "-Wall",
                "-Wextra",
                "-Wfatal-errors",
                "--debug"
            ],
            "group": "build"
        },
        {
            "label": "CheckTestCase",
            "type": "shell",
            "command": "cd ${fileDirname} && g++-11 -std=c++17 -g3 -O0 -Wall -Wextra -Wfatal-errors -Wl,-stack_size,0x10000000 -fsanitize=address,undefined -DMY_DEBUG ${fileBasename} && oj test -c ./a.out -d ./test",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            }
        },
        {
            "label": "SubmitCode",
            "type": "shell",
            "command": "cd ${fileDirname} && oj submit ${file}",
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            }
        },
    ],
    "version": "2.0.0"
}